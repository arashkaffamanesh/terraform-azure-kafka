{
  "variables": {
    "client_id": "{{env `ARM_CLIENT_ID`}}",
    "client_secret": "{{env `ARM_CLIENT_SECRET`}}",
    "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",

    "resource_group": "{{env `PACKER_IMAGE_RESOURCE_GROUP`}}",
    "location": "{{env `PACKER_IMAGE_LOCATION`}}",
    "image_name": "{{env `PACKER_IMAGE_NAME`}}"
  },
  "builders": [
    {
      "type": "azure-arm",
      "client_id": "{{user `client_id`}}",
      "client_secret": "{{user `client_secret`}}",
      "subscription_id": "{{user `subscription_id`}}",

      "os_type": "Linux",
      "image_publisher": "Canonical",
      "image_offer": "UbuntuServer",
      "image_sku": "16.04-LTS",

      "managed_image_resource_group_name": "{{user `resource_group`}}",
      "managed_image_name": "{{user `image_name`}}-{{isotime \"20060102.150405\"}}",

      "azure_tags": {
          "class": "kafka"
      },

      "location": "{{ user `location`}}",
      "vm_size": "Standard_DS2_v2"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline_shebang": "/bin/bash -xeu",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E bash '{{ .Path }}'",
      "inline": [
        "update-locale LC_ALL=en_US.UTF-8 LANG=en_US.UTF-8",
        "wget -qO - https://packages.confluent.io/deb/4.0/archive.key | sudo apt-key add -",
        "echo 'deb [arch=amd64] https://packages.confluent.io/deb/4.0 stable main' > /etc/apt/sources.list.d/confluent.list",
        "export DEBIAN_FRONTEND=noninteractive",
        "apt-get -q update",
        "apt-get -qy upgrade",
        "apt-get -qy dist-upgrade",
        "apt-get -qy install openjdk-8-jre-headless",
        "apt-get -qy install confluent-platform-2.11",

        "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
      ]
    }
  ]
}
